# 数据库配置
DATABASE_URL=sqlite:///./university_data.db
DATABASE_ECHO=false

# API配置
API_TITLE=全球大学数据收集器
API_VERSION=1.0.0

# 爬虫配置
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
REQUEST_DELAY=1.0
MAX_RETRIES=3
TIMEOUT=30

# 数据源API密钥（可选）
SPAIN_EDUCATION_API_KEY=your_api_key_here
WORLD_UNIVERSITY_API_KEY=your_api_key_here

# 邮件验证配置
EMAIL_VALIDATION_ENABLED=true
DOMAIN_VALIDATION_ENABLED=true

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/university_collector.log

# 安全配置
SECRET_KEY=your-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 代理配置（可选）
USE_PROXY=false
PROXY_LIST=http://proxy1:port,http://proxy2:port

# 数据收集配置
COUNTRIES_TO_COLLECT=spain,france,germany,italy,uk
MAX_UNIVERSITIES_PER_COUNTRY=1000 